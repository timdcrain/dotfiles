set $base0F #a3685a

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
        tray_output primary
        position top
        separator_symbol "  "
        strip_workspace_numbers yes
        font pango: Terminus, Awesome 20

    colors {
        background $base00
        statusline $base04
        separator $base00

        #                   border   background  text
        focused_workspace   $base00  $base00     #4FC0E8
        active_workspace    $base00  $base00     #A6E22E
        inactive_workspace  $base00  $base00     #C1D1E0
        urgent_workspace    $base00  $base00     #FFA500
    }
}

# Lockscreen CTRL-MOD-L
set $Locker dm-tool lock && sleep 1
bindsym Ctrl+$mod+l exec --no-startup-id $Locker

new_window none

# Floating windows
for_window[class="Wicd-client.py"] floating enable
for_window[class="Keepassx2"] floating enable

bindsym $mod+space exec rofi -show run

